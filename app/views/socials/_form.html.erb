<div class="container">
	<div class="row">
		<div class="col-xs-12  col-sm-10 col-md-6 col-lg-6 col-sm-offset-1 col-md-offset-3 col-lg-offset-3">

<%= form_for(social) do |f| %>
  <% if social.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(social.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% social.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

			<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

			<div class="form-group">
    <%= f.label :icon %>
    <%= f.text_field :icon, class: "form-control" %>
  </div>

			<div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

			<div class="actions">
				<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
					<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
				<% end %>
				<%= link_to '<i class="fa fa-floppy-o" aria-hidden="true"></i> Cancel'.html_safe, socials_path, {class: "btn btn-danger"} %>
			</div>
<% end %>
		</div>
	</div>
</div>
