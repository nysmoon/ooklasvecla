<% provide(:title, "Speedpaint Tags") %>
<% provide(:phrase, "manage tags for your speedpaints") %>

<!-- Start margin -->
<div class="margin-collection">
             
	<!-- Start projects -->
	<div class="container">
		<div class="row text-center">
			<%= link_to '<i class="fa fa-plus" aria-hidden="true"></i> Add New Tag'.html_safe, new_tag_path, {class: "btn btn-success"} %>
		</div>
		
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th width='70%'>Name</th>
					<th colspan="2">Action</th>
				</tr>
			</thead>

			<tbody>
				<% @tags.each do |tag| %>
				<tr>
					<td><%= tag.name %></td>
					<td><%= link_to '<i class="fa fa-edit" aria-hidden="true"></i> Edit'.html_safe, edit_tag_path(tag), {class: "btn btn-primary"} %></td>
					<td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Destroy'.html_safe, tag, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete ' + tag.name + ' tag?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>


<p id="notice"><%= notice %></p>

<h1>Video Tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_tags.each do |video_tag| %>
      <tr>
        <td><%= link_to 'Show', video_tag %></td>
        <td><%= link_to 'Edit', edit_video_tag_path(video_tag) %></td>
        <td><%= link_to 'Destroy', video_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video Tag', new_video_tag_path %>
