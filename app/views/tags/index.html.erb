<% provide(:title, "Art Tags") %>
<% provide(:phrase, "manage tags for your arts") %>

<!-- Start margin -->
<div class="margin-collection">
             
	<!-- Start projects -->
	<div class="container">
		<div class="row text-center">
			<%= link_to '<i class="fa fa-plus" aria-hidden="true"></i> Add New Tag'.html_safe, new_tag_path, {class: "btn btn-success"} %>
		</div>
		
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th width='70%'>Name</th>
					<th colspan="2">Action</th>
				</tr>
			</thead>

			<tbody>
				<% @tags.each do |tag| %>
				<tr>
					<td><%= tag.name %></td>
					<td><%= link_to '<i class="fa fa-edit" aria-hidden="true"></i> Edit'.html_safe, edit_tag_path(tag), {class: "btn btn-primary"} %></td>
					<td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe, tag, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete ' + tag.name + ' tag?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>